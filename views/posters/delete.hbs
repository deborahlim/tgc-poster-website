{{#extends "base"}}
  {{#block "content"}}
    <h1>Deleting {{poster.title}}</h1>
    <form method="POST">
      <div class="alert alert-dang">
        <p>Are you sure you want to delete {{poster.title}}?</p>
        <input type="submit" class="btn btn-danger" value="Yes" />
        <a href="/poster" class="btn btn-success">No</a>
      </div>
    </form>
  {{/block}}
{{/extends}}