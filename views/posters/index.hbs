{{#extends "base"}}

  {{#block "content"}}
    <h1>All Posters</h1>
    <a class="btn btn-primary" href="poster/create">Create New</a>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Media Property</th>
          <th>Cost</th>
          <th>Description</th>
          <th>Date</th>
          <th>Stock</th>
          <th>Height</th>
          <th>Width</th>
          <th>Tags</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each posters}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.mediaProperty.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>{{this.date}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.height}}</td>
            <td>{{this.width}}</td>
            <td>{{#each this.tags}}
                <span class="badge bg-primary">{{this.name}}</span>
              {{/each}}
            </td>
            <td>
              <a
                href="/poster/{{this.id}}/update"
                class="btn btn-primary btn-sm"
              >Update</a>
              <a
                href="/poster/{{this.id}}/delete"
                class="btn btn-danger btn-sm"
              >Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/block}}

{{/extends}}